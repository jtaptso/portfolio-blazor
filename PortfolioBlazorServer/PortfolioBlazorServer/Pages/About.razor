@page "/about"
@using Microsoft.AspNetCore.Components

<PageTitle>About - Learning & Building in Public</PageTitle>

<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <h1>About My Journey</h1>
        <p>Documenting the path from curious learner to skilled developer</p>
    </div>
</div>

<!-- Main About Content -->
<section class="about-content">
    <div class="container">
        <div class="introduction">
            <p>
                Welcome to my about page! I'm excited to share my journey of learning and development in the tech
                world. This space is dedicated to documenting my progress, sharing valuable resources, and
                connecting with fellow enthusiasts.
            </p>
        </div>

        <div class="focus-areas">
            <h3>Areas of Focus</h3>
            <div class="focus-grid">
                <div class="focus-item">
                    <div class="focus-icon">
                        <i class="icon-code"></i>
                    </div>
                    <div class="focus-content">
                        <h4>Web Development</h4>
                        <p>Building responsive and accessible web applications using the latest technologies.</p>
                    </div>
                </div>

                <div class="focus-item">
                    <div class="focus-icon">
                        <i class="icon-data"></i>
                    </div>
                    <div class="focus-content">
                        <h4>Data Science</h4>
                        <p>Analyzing data to extract meaningful insights and drive business strategies.</p>
                    </div>
                </div>

                <div class="focus-item">
                    <div class="focus-icon">
                        <i class="icon-system"></i>
                    </div>
                    <div class="focus-content">
                        <h4>ERP Systems</h4>
                        <p>Understanding enterprise resource planning systems, their integration patterns, and
                            how they support business operations.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="timeline-section">
            <h3>Learning Timeline</h3>
            <div class="timeline">
                <div class="timeline-item">
                    <div class="timeline-marker"></div>
                    <div class="timeline-content">
                        <div class="timeline-date">2025 - Present</div>
                        <h4>Deep Dive into .NET Ecosystem</h4>
                        <p>Currently mastering ASP.NET Core, Entity Framework, and Blazor. Building real-world
                            applications and documenting the learning process.</p>
                    </div>
                </div>

                <div class="timeline-item">
                    <div class="timeline-marker"></div>
                    <div class="timeline-content">
                        <div class="timeline-date">2024</div>
                        <h4>Data Analysis & Business Intelligence</h4>
                        <p>Developed proficiency in Power BI, advanced SQL, and business analytics. Created
                            multiple dashboards for real business scenarios.</p>
                    </div>
                </div>

                <div class="timeline-item">
                    <div class="timeline-marker"></div>
                    <div class="timeline-content">
                        <div class="timeline-date">2023</div>
                        <h4>Foundation Building</h4>
                        <p>Started with web development fundamentals, database design, and business process
                            analysis. Built first portfolio projects.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="values-section">
            <h3>What Drives Me</h3>
            <div class="values-grid">
                <div class="value-card">
                    <h4>🎯 Continuous Learning</h4>
                    <p>Technology evolves rapidly, and staying curious is key to growth. I dedicate time daily
                        to learning something new.</p>
                </div>
                <div class="value-card">
                    <h4>🤝 Knowledge Sharing</h4>
                    <p>Learning becomes more meaningful when shared. I document my journey to help others facing
                        similar challenges.</p>
                </div>
                <div class="value-card">
                    <h4>💡 Problem Solving</h4>
                    <p>Every challenge is an opportunity to create something better. I approach problems with
                        creativity and persistence.</p>
                </div>
                <div class="value-card">
                    <h4>🎨 Quality Focus</h4>
                    <p>Whether it's clean code, intuitive UX, or insightful analysis, I believe in doing things
                        well, not just getting them done.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="about-sidebar">
        <div class="stats-card">
            <h3>Quick Stats</h3>
            <ul class="about-stats">
                <li>
                    <span class="stat-label">Projects Completed</span>
                    <span class="stat-value">@projectCount</span>
                </li>
                <li>
                    <span class="stat-label">Technologies Learned</span>
                    <span class="stat-value">@techCount+</span>
                </li>
                <li>
                    <span class="stat-label">Blog Posts Written</span>
                    <span class="stat-value">@blogCount</span>
                </li>
                <li>
                    <span class="stat-label">Learning Hours</span>
                    <span class="stat-value">@learningHours+</span>
                </li>
            </ul>
        </div>

        <div class="current-learning">
            <h3>Currently Learning</h3>
            <div class="learning-items">
                @foreach (var item in currentLearning)
                {
                    <div class="learning-item">
                        <div class="learning-icon">@item.Icon</div>
                        <div class="learning-details">
                            <h4>@item.Title</h4>
                            <p>@item.Description</p>
                            <div class="progress-container">
                                <div class="progress-bar">
                                    <div class="progress-fill" style="width: @item.Progress%"></div>
                                </div>
                                <span class="progress-text">@item.Progress%</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="tech-stack">
            <h3>Tech Stack</h3>
            <div class="tech-categories">
                @foreach (var category in techStack)
                {
                    <div class="tech-category">
                        <h4>@category.Name</h4>
                        <div class="tech-tags">
                            @foreach (var tech in category.Technologies)
                            {
                                <span class="tech-tag">@tech</span>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="contact-cta">
            <h3>Let's Connect</h3>
            <p>Interested in discussing technology, learning, or potential collaboration?</p>
            <div class="cta-buttons">
                <a href="/contact" class="btn btn-primary">
                    <i class="icon-mail"></i>
                    Get In Touch
                </a>
                <a href="/projects" class="btn btn-outline">
                    <i class="icon-folder"></i>
                    View Projects
                </a>
            </div>
        </div>
    </div>
</section>

