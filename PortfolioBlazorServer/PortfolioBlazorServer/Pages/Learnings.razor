@page "/learnings"
@inject ILearningService LearningService

<h2>All Learnings</h2>
<p>Here’s a complete list of my learning entries. Each entry documents what I learned, the challenges I faced, and the solutions I discovered.</p>

@if (learnings == null)
{
    <p>Loading learnings...</p>
}
else if (!learnings.Any())
{
    <p>No learnings available yet.</p>
}
else
{
    <div class="row g-3 mt-3">
        @foreach (var learning in learnings)
        {
            <div class="col-md-6 col-lg-4">
                <LearningCard Learning="learning" />
            </div>
        }
    </div>
}

@code {
    private List<Learning>? learnings;

    protected override async Task OnInitializedAsync()
    {
        learnings = await LearningService.GetLearningsAsync();
    }
}
