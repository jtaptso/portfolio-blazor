@using PortfolioBlazorServer.Data
@code {
    [Parameter]
    public Learning Learning { get; set; } = null!;
}

<div class="card-content">
    <h3 class="learning-title">@Learning.Title</h3>
    <p class="learning-summary">@Learning.Summary</p>
    <div class="learning-meta">
        @* <span class="learning-date">@Learning.DateCreated.ToString("MMM yyyy")</span> *@
        @if (Learning.Category != null)
        {
            <span class="learning-category">Category: @Learning.Category.Name</span>
        }
    </div>
    @if (Learning.Tags != null && Learning.Tags.Any())
    {
        <div class="learning-tags">
            @foreach (var tag in Learning.Tags)
            {
                <span class="tag">@tag.Name</span>
            }
        </div>
    }
</div>
